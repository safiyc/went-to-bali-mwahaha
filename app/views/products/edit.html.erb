<h1>Edit Product</h1>

<%= form_for @product, html: { multipart: true } do |f| %>
  Image: <%= f.file_field :product_img %>
  Name: <%= f.text_field :name %>
  Description: <%= f.text_field :description %>
  Price: <%= f.text_field :price %>
  <%= f.submit "Submit" %>
<% end %>

<p><%= link_to "Return to product", product_path %></p>
