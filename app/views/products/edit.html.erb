<h3>Edit Product</h3>
<br>

<%= form_for @product, html: { multipart: true } do |f| %>
  <h5>Name: <%= f.text_field :name %></h5>
  <p>Description: <%= f.text_field :description %></p>
  <p>Price: <%= f.text_field :price %></p>
  <p>Image: <%= f.file_field :product_img %></p>
  <span class="waves-effect waves-light btn"><%= f.submit "Submit" %></span>
<% end %>

<p><%= link_to "Return to product", product_path %></p>
